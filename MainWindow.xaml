<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Generator" Height="350" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Password Length:" Grid.Row="0" Margin="10"/>
        <TextBox x:Name="lengthTextBox" Grid.Row="0" Grid.Column="1" Margin="10"/>

        <CheckBox x:Name="lowercaseCheckBox" Content="Include Lowercase Characters" Grid.Row="1" Margin="10"/>
        <CheckBox x:Name="uppercaseCheckBox" Content="Include Uppercase Characters" Grid.Row="2" Margin="10"/>
        <CheckBox x:Name="numbersCheckBox" Content="Include Numbers" Grid.Row="3" Margin="10"/>
        <CheckBox x:Name="specialCharsCheckBox" Content="Include Special Characters" Grid.Row="4" Margin="10"/>

        <Button Content="Generate Password" Click="GenerateButton_Click" Grid.Row="5" Margin="10"/>

        <Label x:Name="passwordLabel" Grid.Row="6" Margin="10"/>
    </Grid>

</Window>

    